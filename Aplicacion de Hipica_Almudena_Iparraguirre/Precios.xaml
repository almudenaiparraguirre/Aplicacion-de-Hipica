<Window x:Class="Aplicacion_de_Hipica_Almudena_Iparraguirre.Precios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplicacion_de_Hipica_Almudena_Iparraguirre"
        mc:Ignorable="d"
        Title="Precios" Height="450" Width="900"
        MinHeight="450" MinWidth="900" MaxHeight="450" MaxWidth="900"
        Background="#EEF0F2">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Teléfono, correo, instagram, facebook -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,10,0,0">
                <Image Grid.Column="0" Source="images/telefono.png" Margin="120,0,0,0" Cursor="Hand"/>
                <TextBlock VerticalAlignment="Center" Margin="5,0,0,0" 
                       Text="+34663424110" FontFamily="Karla" FontWeight="Bold" Cursor="Hand"
                       MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
                <Image Source="images/correo2.png" Width="50" Cursor="Hand"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="info@gesthip.com"
                       FontFamily="Karla" FontWeight="Bold" Cursor="Hand"
                       MouseLeftButtonUp="TextBlock_MouseLeftButtonUp"/>
                <Image Grid.Column="2" Source="images/facebook.png" Stretch="Fill" Margin="200,0,0,0" Cursor="Hand"/>
                <Image Grid.Column="2" Source="images/instagram.png" Stretch="Fill" Margin="5,0,0,0" Cursor="Hand"/>
            </StackPanel>

            <!-- Menú horizontal superior -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0" Orientation="Horizontal" Background="White" HorizontalAlignment="Left" Width="900" Height="50">
                <StackPanel.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="270" Opacity="0.5" BlurRadius="5" Color="Black"/>
                </StackPanel.Effect>
                <Image VerticalAlignment="Center" Source="images/logo.png" Stretch="Fill" HorizontalAlignment="Left" MaxHeight="25" Margin="20,0,0,0" Cursor="Hand"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock VerticalAlignment="Center" Margin="50,0,0,0" Text="Inicio"
                       FontFamily="Karla" FontWeight="SemiBold" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                           MouseLeave="TextBlock_MouseLeave" MouseLeftButtonUp="inicio_click"/>
                    <TextBlock VerticalAlignment="Center" Margin="50,0,0,0" Text="Novedades"
                       FontFamily="Karla" FontWeight="SemiBold" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                           MouseLeave="TextBlock_MouseLeave" MouseLeftButtonUp="novedades_click"/>
                    <TextBlock VerticalAlignment="Center" Margin="50,0,0,0" Text="¿Quiénes somos?"
                       FontFamily="Karla" FontWeight="SemiBold" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                           MouseLeave="TextBlock_MouseLeave" MouseLeftButtonUp="quienesSomosClick"/>
                    <TextBlock VerticalAlignment="Center" Margin="50,0,0,0" Text="Tienda"
                       FontFamily="Karla" FontWeight="SemiBold" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                           MouseLeave="TextBlock_MouseLeave" MouseLeftButtonUp="tienda_click"/>
                    <TextBlock VerticalAlignment="Center" Margin="50,0,0,0" Text="Precios"
                       FontFamily="Karla" FontWeight="SemiBold" Cursor="Hand"
                           MouseLeftButtonUp="precios_click" Foreground="#B71C1C"/>
                    <TextBlock VerticalAlignment="Center" Margin="50,0,0,0" Text="Galería"
                       FontFamily="Karla" FontWeight="SemiBold" Cursor="Hand" MouseEnter="TextBlock_MouseEnter"
                           MouseLeave="TextBlock_MouseLeave" MouseLeftButtonUp="galeria_click"/>
                    <Image VerticalAlignment="Center" Source="images/material-symbols_person.png" 
                       Stretch="Fill" HorizontalAlignment="Right" MouseLeftButtonUp="Image_MouseLeftButtonUp"
                       Cursor="Hand" MaxHeight="25" Margin="100,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="PRECIOS ESCUELA" FontFamily="Karla" FontWeight="Bold" Margin="0,35,0,0"
                       TextAlignment="Center" FontSize="30" Grid.Row="2"/>

            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,40,0,0">
                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="PASEOS" Padding="70,10,70,10" Foreground="White" Background="#B71C1C"
                   FontFamily="Karla" FontSize="20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="30 €" FontFamily="Karla" FontSize="65" Foreground="#B71C1C" FontWeight="Light"/>
                        <TextBlock Text="/hora" TextAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,15"
                               FontFamily="Karla"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="CLASE PARTICULAR" Padding="70,10,70,10" Foreground="White" Background="#B71C1C"
                   FontFamily="Karla" FontSize="20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="30 €" FontFamily="Karla" FontSize="65" Foreground="#B71C1C" FontWeight="Light"/>
                        <TextBlock Text="/hora" TextAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,15"
                               FontFamily="Karla"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="CLASE GRUPAL" Padding="70,10,70,10" Foreground="White" Background="#B71C1C"
                   FontFamily="Karla" FontSize="20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="20 €" FontFamily="Karla" FontSize="65" Foreground="#B71C1C" FontWeight="Light"/>
                        <TextBlock Text="/hora" TextAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,15"
                               FontFamily="Karla"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="PRECIOS ALQUILERES" FontFamily="Karla" FontWeight="Bold" Margin="0,25,0,0"
                       TextAlignment="Center" FontSize="30" Grid.Row="4"/>

            <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Center" Margin="0,40,0,0">
                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="MEDIO ALQUILER" Padding="70,10,70,10" Foreground="White" Background="#B71C1C"
                   FontFamily="Karla" FontSize="20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="300 €" FontFamily="Karla" FontSize="65" Foreground="#B71C1C" FontWeight="Light"/>
                        <TextBlock Text="/mes" TextAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,15"
                               FontFamily="Karla"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Background="White">
                    <TextBlock Text="ALQUILER COMPLETO" Padding="70,10,70,10" Foreground="White" Background="#B71C1C"
                   FontFamily="Karla" FontSize="20"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20">
                        <TextBlock Text="600 €" FontFamily="Karla" FontSize="65" Foreground="#B71C1C" FontWeight="Light"/>
                        <TextBlock Text="/mes" TextAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,15"
                               FontFamily="Karla"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="Aviso Legal | Política de Privacidad | Política de Redes Sociales | Política de Cookies" Grid.Row="6" TextAlignment="Center"
                       Margin="0,40,0,0"/>
            <TextBlock Text="GESTHIP® - Copyright - 2022" Grid.Row="7" TextAlignment="Center"
                       Margin="0,0,0,5"/>
        </Grid>
    </ScrollViewer>
</Window>
